COMMAND=/usr/bin/keystone-all
PIDFILE=/var/run/keystone/keystone.pid

depend() {
  need net
}

start() {
  ebegin "Starting ${SVCNAME}"
  start-stop-daemon --start --quiet -i -b --pidfile ${PIDFILE} --make-pidfile ${COMMAND}
  eend $?
}

stop() {
  ebegin "Stopping ${SVCNAME}"
  start-stop-daemon --stop --quiet -i --pidfile ${PIDFILE}
  eend $?
}
